- if TopicUser.where(topic_id: topic.id, user_id: current_user.id).exists?
  = link_to "Unfollow Topic | #{topic.users.count}", topic_unfollow_url(topic), method: :delete, class: "btn btn-gray text-right"
- else
  = link_to "Follow Topic | #{topic.users.count}", topic_follow_url(topic), method: :post, class: "btn btn-blue text-right"
